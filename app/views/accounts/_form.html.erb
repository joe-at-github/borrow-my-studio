
<div id='account-form'>
  <div class="ui form">

    <%= simple_form_for @account, :url => user_account_path, validate: true do |f| %>
      <%= f.input :name %>
      <%= f.input :location %>
      <%= f.input :telephone %>
      <%= f.label :your_bio, label: 'Your bio' %>
      <%= f.text_area :your_bio %>
      <%= f.label :avatar_img, label: 'Your profile pic' %>
      <%= f.file_field :avatar_img %>

      <%= f.button :submit, 'Create Profile', class: "ui teal button" %>
    <% end %>
  
  </div>
</div>