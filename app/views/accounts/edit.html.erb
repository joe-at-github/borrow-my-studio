  <div class='edit-account-form'>

    <div id='account-image'>
      <%= image_tag @account.avatar_img, :class => "ui medium rounded image" %> 
    </div>
    

      <%= simple_form_for([@user, @account]) do |f| %>
      <%= f.input :name %>
      <%= f.input :location %>
      <%= f.input :telephone %>
      <%= f.label :avatar_img, label: 'Your avatar' %>
      <%= f.file_field :avatar_img %>
      <%= f.label :your_bio, label: 'Your bio' %>
      <%= f.text_area :your_bio %>
      <div class='button'>
        <%= f.button :submit, 'Update Profile', class: "teal ui button" %>
      </div>
    
      <% end %>

  </div>

