  <div class='registration-form'>
    <div class="ui centered form">
      
      <h4>Sign up</h4>

      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.text_field :username, autofocus: true, placeholder: 'username' %>
          <%= f.input :email, required: true, label: false, placeholder: 'email' %>
          <%= f.input :password, required: true, label: false, placeholder: 'password', hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
          <%= f.input :password_confirmation, required: true, label: false, placeholder: 'password confirmation' %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Sign up", class: "ui primary button" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>

    </div>
  </div>
