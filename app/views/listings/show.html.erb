
<% @listings.each do |listing| %>
  <div class='listings-wrapper'>
    <div class="ui raised segment">

      <div class='listings-thumbnail'>
        <%= link_to(image_tag(listing.images[0], class: 'listings-thumbnail-image'), item_path(:id => listing.id)) %>
      </div>
        <div class='listings-info'>
          <p class='inline-p'> <%= listing.item_name %> </p>
          <p class='inline-p'> <%= listing.daily_price %> </p>
          <p class='inline-p'> <%= listing.created_at %> </p>
        </div>

    </div>
  </div>

<% end %>
