
<%= render 'categories' %>


<% if @items.count == 0 %>
  <div class='empty-search'>
    <% flash.now[:alert] = 'There are no items listed for that search term.' %>
  </div>

<% else %>

  <div class='search-container go-behind'>
    <div class='row'>
      <% @items.each do |item| %>
        <div class='col-md-3'>
          <div class='thumbnail'>
            <%= link_to(image_tag(item.images[0], class: "object-fit-cover"), item_path(:id => item.id)) %>
            <span class='hover-text'> Â£<%= item.daily_price %>/day </span>
          </div>
          <h6> <strong> <%= item.item_name %> </strong> </h6> 
          <h6> from: <%= item.user.username %> ( <%= item.user.account.location %> )</h6>
        </div>
      <% end %>
    </div>
  </div>

<% end %>




